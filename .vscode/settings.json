{
    "files.associations": {
        "ktime.h": "c",
        "random": "c",
        "limits": "c",
        "string": "c"
    },
    "editor.formatOnSave": true,
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format", // 若用官方插件则写 "ms-vscode.cpptools"
        "editor.formatOnSave": true,
    },
    "clang-format.executable": "/usr/bin/clang-format", // 可省略，默认自动找
    "clang-format.style": "file", // 表示优先使用你项目中的 .clang-format
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ]
}